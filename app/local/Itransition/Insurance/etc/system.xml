<?xml version="1.0"?>

<config>
    <tabs>
        <customconfig translate="label" module="insurance">
            <label>Insurance Management</label>
            <sort_order>1</sort_order>
        </customconfig>
    </tabs>

    <sections>
        <insurance_options translate="label" module="insurance">
            <label>Insurance Settings</label>
            <tab>customconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <customins translate="label">
                    <label>Insurance Settings:</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>

                    <fields>
                        <insurance_enable>
                            <label>Enable: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>insurance/enabled</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If enabled ensurance price will be calculated on checkout.</comment>
                        </insurance_enable>

                        <insurance_rate>
                            <label>Insurance rate: </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-not-negative-number</validate>
                            <validate>validate-greater-than-zero</validate>
                            <backend_model>insurance/rate</backend_model>
                            <comment>Insurance price rate from total amount.</comment>
                        </insurance_rate>

                        <insurace_type>
                            <label>Insurance type:</label>
                            <frontend_type>select</frontend_type>
                            <source_model>insurance/options</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Choose insurance type (static rate or %).</comment>
                        </insurace_type>

                        <insurance_label>
                            <label>Insurance label</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </insurance_label>
                    </fields>
                </customins>
            </groups>
        </insurance_options>
    </sections>
</config>